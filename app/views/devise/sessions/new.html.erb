<div>
  <a class="hiddenanchor" id="signup"></a>
  <a class="hiddenanchor" id="signin"></a>
  <div class="login_wrapper">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="animate form login_form">
        <section class="login_content">
          <h1>Login Form</h1>
          <div class="field">
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email",placeholder: "Email", required: true %>
            <%# <input type="text" class="form-control" placeholder="Username" required="" /> %>
          </div>
          <br>
          <div>
            <%= f.password_field :password, class:"form-control", autocomplete: "current-password", required: true, placeholder:"Password" %>
            <%# <input type="password" class="form-control" placeholder="Password" required="" /> %>
          </div>
          <div>
            <% if devise_mapping.rememberable? %>
              <br>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </div>
          <div>
            <br>
            <%= f.submit "Log in", class: "btn btn-default submit" %>
            <%# <a class="btn btn-default submit" href="index.html">Log in</a> %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "reset_pas" %>
            <%# <a class="reset_pass" href="#">Lost your password?</a> %>
          </div>
          <div class="clearfix"></div>
          <div class="separator">
            <p class="change_link">New to site?
            <%= link_to "Create Account", new_registration_path(resource_name), class: "to_register" %>
              <%# <a href="#signup" class="to_register"> Create Account </a> %>
            </p>
            <div class="clearfix"></div>
            <br />
            <div>
              <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
              <p>Â©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
            </div>
          </div>
        </section>
      </div>
    <% end %>
  </div>
</div>
